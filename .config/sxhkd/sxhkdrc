# Basics
super + Return
	$TERMINAL
super + shift + q
	bspc node -c
super + w
	$BROWSER
super + e
	$TERMINAL -e neomutt
super + r
	$TERMINAL -e ranger
super + p
	$TERMINAL -e transmission-remote-cli
super + d
	dmenu_run
super + c
	$TERMINAL -e calcurse -D ~/.config/calcurse
super + v
	$TERMINAL -e nvim -c VimwikiIndex
super + n
	$TERMINAL -e newsboat
super + m
	$TERMINAL -e ncmpcpp
super + shift + m
	pavucontrol &

# Navigation
super + {h,j,k,l}
	bspc node -f {west,south,north,east}
super + shift + {h,j,k,l}
#	bspc node -s {west,south,north,east}
	d={west,south,north,east}; bspc node -s $d.local --follow || bspc node -m $d --follow
super + ctrl + {h,j,k,l}
	d={west,south,north,east}; bspc node -s $d --follow || bspc node -m $d --follow
super + alt + {h,j,k,l}
	bspc node -v {-20 0,0 20,0 -20,20 0}
super + shift + {y,u,i,o}
	bspc node -z {left -25 0,bottom 0 25,top 0 -25,right 25 0}
super + ctrl + {y,u,i,o}
	bspc node -z {right -25 0,top 0 25,bottom 0 -25,left 25 0}

super + {space,f,t}
	bspc node -t '~{floating,fullscreen,tiled}'

# Duplicated for Arrow Keys
super + {Left,Down,Up,Right}
	bspc node -f {west,south,north,east}
super + shift + {Left,Down,Up,Right}
	bspc node -s {west,south,north,east}

# cycle forward/backward
super + {_,shift +}c
    	bspc node -f {next,prev}

# circulate leaves backward/forward
super + {comma,period}
   	bspc node @focused:/ -C {backward,forward}

# rotate tree clockwise/counter clockwise
super + shift + {comma,period}
    bspc node @focused:/ -R {270,90}


# Workspaces
super + {0-9}
	bspc desktop -f {0-9}
super + shift + {0-9}
	bspc node -d {0-9}
super + ctrl + {0-9}
	id=$(bspc query -N -n); bspc node -d {0-9}; bspc node -f ${id}

# prev/next workspace on monitor
super + bracket{left,right}
    bspc desktop -f {prev,next}

# Misc
super + Escape
	i3lock --nofork -B=1
super + shift + Escape
	/$HOME/.local/bin/prompt "Shutdown?" "sudo -A shutdown -h now"
super + ctrl + Escape
	/$HOME/.local/bin/prompt "Reboot?" "sudo -A reboot"

# Gaps
super + shift + d
	bspc config window_gap 0
super + shift + t
	bspc config window_gap 15

# Screenshot
Print
	/$HOME/.local/bin/screenclip
shift + Print
	$HOME/.local/bin/screenimgur


# Media
XF86AudioRaiseVolume
	/$HOME/.local/bin/dunst/volchange.sh volup &
XF86AudioLowerVolume
	/$HOME/.local/bin/dunst/volchange.sh voldown &
XF86AudioMute
	/$HOME/.local/bin/dunst/volchange.sh volmute &

shift + XF86AudioRaiseVolume
	playerctl next &
shift + XF86AudioLowerVolume
	playerctl previous &
shift + XF86AudioMute
	playerctl play-pause &

XF86Calculator
	$HOME/.local/bin/i3cmds/ddspawn $HOME/.local/bin/i3cmds/ddcalc -f mono:pixelsize=24 &
shift + XF86Calculator
	pactl set-source-mute @DEFAULT_SOURCE@ toggle &
