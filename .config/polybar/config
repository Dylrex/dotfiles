#### CUSTOM MODULES ####
[module/spotify]
type = custom/script
interval = 1
#format-prefix = "‚ô´  "
format = <label>
exec = python /$HOME/.local/bin/statusbar/spotifystatus.py -f '{play_pause}  {artist} - {song}' --playpause-font=4
;format-underline = ${colors.highlight}

[module/updates]
type = custom/script
exec = /$HOME/.local/bin/statusbar/pacupdates
interval = 600
format-underline = ${colors.foreground}

[module/mutt-wizard]
type = custom/script
exec = mailbox
interval = 5
format-prefix = "Ôê∞ "
format-prefix-foreground = ${colors.foreground}
format-underline = ${colors.highlight}
click-left = st -e neomutt

[module/torrent]
type = custom/script
interval = 1
exec = torrentstatus
click-left = $TERMINAL -e transmission-remote-cli
format-underline = ${colors.highlight-alt}
format-background = ${colors.background}

[module/vpn]
type = custom/script
exec = /$HOME/.local/bin/statusbar/vpnstatus
interval = 5

[module/weather]
type = custom/script
exec = /$HOME/.local/bin/statusbar/weather
interval = 1000
format-underline = ${colors.highlight}
label-font = 6
